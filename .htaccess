RewriteEngine On
RewriteBase /Sistema_prestamo_de_herramientas/

# Permitir acceso directo a archivos existentes (CSS, JS, imágenes)
RewriteCond %{REQUEST_FILENAME} -f
RewriteCond %{REQUEST_URI} \.(css|js|png|jpg|jpeg|gif|ico|woff|woff2|ttf|svg)$ [NC]
RewriteRule ^ - [L]

# Redirigir todo lo demás al front controller
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ public/index.php [L]
